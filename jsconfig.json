{
    "compilerOptions": {
        "baseUrl": ".", // This tells Next.js to resolve imports relative to the project root
        "paths": {
            "@/*": [
                "./src/*"
            ], // This maps the "@/" alias to your "src/" directory (e.g., @/Feature to src/Feature)
            // This line attempts to resolve "@/components/*" first from the root "components/" folder,
            // and if not found, then from "src/components/" folder.
            "@/components/*": [
                "./components/*",
                "./src/components/*"
            ]
        },
        "jsx": "preserve" // Required for Next.js to handle JSX
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
    ],
    "exclude": [
        "node_modules"
    ]
}